<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView3"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:showIn="@layout/fragment_res1_second">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn3black"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_black"
            android:text="0" />


        <Button
            android:id="@+id/btn3brown"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_brown"
            android:text="1" />


        <Button
            android:id="@+id/btn3red"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_red"
            android:text="2" />

        <Button
            android:id="@+id/btn3orange"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_orange"
            android:text="3" />

        <Button
            android:id="@+id/btn3yellow"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_yellow"
            android:text="4" />

        <Button
            android:id="@+id/btn3green"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_green"
            android:text="5" />

        <Button
            android:id="@+id/btn3blue"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_blue"
            android:text="6" />

        <Button
            android:id="@+id/btn3violet"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_violet"
            android:text="7" />

        <Button
            android:id="@+id/btn3gray"
            style="@style/btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_grey"
            android:text="8" />

        <Button
            android:id="@+id/btn3white"
            style="@style/btn_tab"
            android:textColor="#000000"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_btn_white"
            android:text="9" />

    </LinearLayout>
</ScrollView>